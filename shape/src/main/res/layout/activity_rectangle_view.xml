<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        style="@style/button_rectangle_common_style"
        android:text="默认矩形"/>

    <Button
        style="@style/button_rectangle_common_style"
        android:background="@drawable/bg_rectangle_padding"
        android:text="加了内间距的矩形"/>

    <Button
        style="@style/button_rectangle_common_style"
        android:background="@drawable/bg_rectangle_gradient"
        android:text="加了渐变的矩形"/>

    <Button
        style="@style/button_rectangle_common_style"
        android:background="@drawable/bg_rectangle_corners"
        android:text="圆角矩形"/>

    <Button
        style="@style/button_rectangle_common_style"
        android:background="@drawable/bg_rectangle_corners_only_top"
        android:text="只有上半部分的圆角矩形"/>

    <Button
        style="@style/button_rectangle_common_style"
        android:background="@drawable/bg_rectangle_corners_arc"
        android:text="弧形边矩形"/>

    <Button
        style="@style/button_rectangle_common_style"
        android:background="@drawable/bg_ractangle_with_stroke_solid"
        android:text="加了实现描边的矩形"/>

    <Button
        style="@style/button_rectangle_common_style"
        android:background="@drawable/bg_ractangle_with_stroke_dash"
        android:text="加了虚线描边的矩形"/>

    <Button
        style="@style/button_rectangle_common_style"
        android:background="@drawable/bg_ractangle_hollow"
        android:text="镂空描边的矩形"/>
</LinearLayout>
