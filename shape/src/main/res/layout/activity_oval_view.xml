<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        style="@style/button_oval_common_style"
        android:background="@drawable/bg_oval_default"
        android:imeActionLabel="默认效果"
        android:text="0"/>

    <TextView
        style="@style/button_oval_common_style"
        android:background="@drawable/bg_oval_padding"
        android:imeActionLabel="内间距"
        android:text="1"/>

    <TextView
        style="@style/button_oval_common_style"
        android:background="@drawable/bg_oval_size"
        android:imeActionLabel="设置大小，实现正圆"
        android:text="2"/>

    <TextView
        style="@style/button_oval_common_style"
        android:background="@drawable/bg_oval_stroke_solid"
        android:text="3"/>

    <TextView
        style="@style/button_oval_common_style"
        android:background="@drawable/bg_oval_stroke_hollow"
        android:textColor="@android:color/black"
        android:text="4"/>

    <TextView
        style="@style/button_oval_common_style"
        android:background="@drawable/bg_oval_stroke_dash"
        android:text="5"/>

    <TextView
        style="@style/button_oval_common_style"
        android:background="@drawable/bg_oval_stroke_gradient"
        android:text="6"/>
</LinearLayout>
