<?xml version="1.0" encoding="utf-8"?>
<!--shape可以自定义形状一下四种类型形状-->
<!--rectangle：矩形(默认的形状)，可以画出直角矩形，圆角矩形，弧形矩形等等-->
<!--oval：椭圆形，用的比较多的是话正圆-->
<!--line：线性，可以画实线和虚线-->
<!--ring：环形，可以画环形进度条-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">

    <!--设置填充的颜色，只有android:color一个属性 如果不设置就会变成透明-->
    <solid android:color="@android:color/transparent"/>

    <!--设置内容形状边界之间的内间距，可分别设置上下左右的距离-->
    <padding
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp"/>

    <!--设置圆角，只适用于rectangle类型 可以分别设置四个角的不同半径的圆角，当设置的半径很大的时候就变成了弧形边了-->
    <!--android:radius 圆角半径，会被下面每个特定的圆角属性重写-->
    <corners
        android:bottomLeftRadius="200dp"
        android:bottomRightRadius="200dp"
        android:radius="200dp"
        android:topLeftRadius="200dp"
        android:topRightRadius="200dp"/>

    <!--设置描边，可以设置成实线或虚线-->
    <!--android:color 描边的颜色-->
    <!--android:width 描边的宽度-->
    <!--android:dashWidth 设置虚线时的横线长度-->
    <!--android:dashGap 设置虚线时的横线之间的距离-->
    <stroke
        android:width="2dp"
        android:color="@color/colorPrimary"
        />
    <!--设置形状的大小-->
    <size
        android:width="200dp"
        android:height="200dp"/>
</shape>